<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Crear nuevo libro</h1>

            <form method="POST" action="/libros/crear-libro">

                <div class="form-group">
                    <label>Título</label>
                    <input type="text" class="form-control" name="title">
                </div>
                <div class="form-group">
                    <label>Autor</label>
                    <input type="text" class="form-control" name="author">
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <input type="text" class="form-control" name="description">
                </div>
                <div class="form-group">
                    <label>Punutación</label>
                    <input type="number" class="form-control" name="rating">
                    <small class="form-text text-muted">Respeta las puntuaciones de IMDB.</small>
                </div>
                <button type="submit" class="btn btn-dark">Crear nuevo libro</button>
            </form>
        </div>
    </div>



</div>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Editar {{title}}</h1>

            <form method="POST" action="/libros/editar-libro?book_id={{_id}}">

                <div class="form-group">
                    <label>Título</label>
                    <input type="text" class="form-control" name="title" value="{{title}}">
                </div>
                <div class="form-group">
                    <label>Autor</label>
                    <input type="text" class="form-control" name="author" value="{{author}}">
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <input type="text" class="form-control" name="description" value="{{description}}">
                </div>
                <div class="form-group">
                    <label>Punutación</label>
                    <input type="number" class="form-control" name="rating" value="{{rating}}">
                    <small class="form-text text-muted">Respeta las puntuaciones de IMDB.</small>
                </div>
                <button type="submit" class="btn btn-dark">Guardar edición</button>
            </form>
        </div>
    </div>



</div>